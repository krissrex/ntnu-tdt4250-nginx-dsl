<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="no.ntnu.tdt4250.nginx.dsl.generator">
    <property name="ECLIPSE_HOME" value="../../../../AppData/Local/Eclipse/eclipse-dsl-2019-06-R-win32-x86_64/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="no.ntnu.tdt4250.nginx.dsl.generator.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/no.ntnu.tdt4250.nginx.dsl.generator/bin"/>
    </path>

    <path id="no.ntnu.tdt4250.nginx.dsl.generator.classpath">
        <path refid="no.ntnu.tdt4250.nginx.dsl.generator.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="no.ntnu.tdt4250.nginx.dsl.generator.libraryclasspath.alljars">
        <pathelement location="../no.ntnu.tdt4250.nginx.dsl.generator/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="no.ntnu.tdt4250.nginx.dsl.generator.classpath.alljars">
        <path refid="no.ntnu.tdt4250.nginx.dsl.generator.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="no.ntnu.tdt4250.nginx.dsl.generator.main.Generate" classpathref="no.ntnu.tdt4250.nginx.dsl.generator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="no.ntnu.tdt4250.nginx.dsl.generator.main.Generate" classpathref="no.ntnu.tdt4250.nginx.dsl.generator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
